  </properties>
  <definition class="org.jenkinsci.plugins.workflow.cps.CpsFlowDefinition" plugin="workflow-cps@2.92">
    <script>node("master"){
    stage("Clean workspace"){
        cleanWs()
    }
    stage("Clone repo") {
     sh "cd /var/jenkins_home/ &amp;&amp; git clone https://github.com/chinastockproducts/app.git"
    }
    stage("Deploy GOAPP") {
        sh """
          cd /var/jenkins_home/app/go-k8s
          export KUBECONFIG=/var/jenkins_home/kubeconfig
          helm install goapp ./helm-chart/
          kubectl get po | grep goapp
          kubectl get svc | grep go
          
          echo 'App is running on instance-ip:3000'
        """
    }
}</script>
    <sandbox>true</sandbox>
  </definition>
  <triggers/>
  <disabled>false</disabled>
</flow-definition>
